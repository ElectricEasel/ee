<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.4.1" client="site" method="upgrade">
    <name>Case Study Social</name>
    <author>Ricky Goldman</author>
    <creationDate>April 2015</creationDate>
    <copyright>Copyright (C) 2015 Electric Easel, Inc. All rights reserved.</copyright>
    <version>1.0.0</version>
    <description>Display formatted social media links for case studies.</description>
    <files>
        <filename>mod_case_study_social.xml</filename>
        <filename module="Case Study Social">mod_case_study_social.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="social" label="Social Params">
                <field
                    name="title"
                    type="text"
                    default="Social Media"
                    label="Title"
                    description="Module Title" />
                <field
                    name="subtitle"
                    type="textarea"
                    label="Subtitle"
                    description="Module Subtitle" />
                <field
                    name="social1_title"
                    type="text"
                    label="Social 1 Site"
                    description="Social 1 Site Title" />
                <field
                    name="social1_link"
                    type="text"
                    label="Social 1 Link"
                    description="Link to Social 1 Page" />
                <field
                    name="social1_image"
                    type="imagelist"
                    directory="/templates/ee/images/case-studies/social"
                    hide_default="true"
                    label="Social 1 Image"
                    description="Social 1 Image" />
                <field
                    name="social1_subtitle"
                    type="textarea"
                    label="Social 1 Subtitle"
                    description="Social 1 Subtitle" />
                <field
                    name="social2_title"
                    type="text"
                    label="Social 2 Site"
                    description="Social 2 Site Title" />
                <field
                    name="social2_link"
                    type="text"
                    label="Social 2 Link"
                    description="Link to Social 2 Page" />
                <field
                    name="social2_image"
                    type="imagelist"
                    directory="/templates/ee/images/case-studies/social"
                    hide_default="true"
                    label="Social 2 Image"
                    description="Social 2 Image" />
                <field
                    name="social2_subtitle"
                    type="textarea"
                    label="Social 2 Subtitle"
                    description="Social 2 Subtitle" />
                <field
                    name="social3_title"
                    type="text"
                    label="Social 3 Site"
                    description="Social 3 Site Title" />
                <field
                    name="social3_link"
                    type="text"
                    label="Social 3 Link"
                    description="Link to Social 3 Page" />
                <field
                    name="social3_image"
                    type="imagelist"
                    directory="/templates/ee/images/case-studies/social"
                    hide_default="true"
                    label="Social 3 Image"
                    description="Social 3 Image" />
                <field
                    name="social3_subtitle"
                    type="textarea"
                    label="Social 3 Subtitle"
                    description="Social 3 Subtitle" />
                <field
                    name="social4_title"
                    type="text"
                    label="Social 4 Site"
                    description="Social 4 Site Title" />
                <field
                    name="social4_link"
                    type="text"
                    label="Social 4 Link"
                    description="Link to Social 4 Page" />
                <field
                    name="social4_image"
                    type="imagelist"
                    directory="/templates/ee/images/case-studies/social"
                    hide_default="true"
                    label="Social 4 Image"
                    description="Social 4 Image" />
                <field
                    name="social4_subtitle"
                    type="textarea"
                    label="Social 4 Subtitle"
                    description="Social 4 Subtitle" />

            </fieldset>
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>